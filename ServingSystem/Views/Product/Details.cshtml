@{
}

<div class="product-page">
    <div class="d-flex justify-content-center">
        <div class="card w-50">
            <div class="card-body">
                <div class="display-4">@Model.Name</div>
                <div class="mt-3">Price: &euro;@Model.Price</div>
                <div class="mt-2">Product Type: @Model.ProductTypeName</div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-6"><a class="btn btn-warning w-100" asp-action="Edit" asp-route-id="@Model.Id">Edit</a></div>
                    <div class="col-6"><a class="btn btn-danger w-100" asp-action="Delete">Delete</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
